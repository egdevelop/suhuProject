  <div class="popup-container" id="cardTemp">
      <div class="popup">
          <div class="popup-head baris1 pisah">
              <h5>Set Min & Max Temp</h5>
              <a href="#" class="float-right" id="closeTemp">x</a>
          </div>
            <label for="3">Max Temp</label>
            <div class="baris1">
                <input type="float" class="form-control mm" id="max11" placeholder="1" required>
                <input type="float" class="form-control mm" id="max21" placeholder="2" required>
                <input type="float" class="form-control mm" id="max31" placeholder="3" required>
